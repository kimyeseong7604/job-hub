{
  "compilerOptions": {
    // Node.js 환경 설정
    "target": "ES2020",               // 최신 JS 기능 사용
    "module": "CommonJS",             // Node.js 기본 모듈
    "rootDir": "./src",               // 소스코드 위치
    "outDir": "./dist",               // 빌드 후 위치
    "esModuleInterop": true,          // import express from 'express' 사용 가능
    "forceConsistentCasingInFileNames": true,
    
    // 타입 검사 강화
    "strict": true,                   // 모든 strict 모드 켜기
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,             // 라이브러리 타입 체크 생략 (속도 향상)

    // 빌드 출력
    "declaration": true,              // 타입 선언 파일 생성
    "declarationMap": true,
    "sourceMap": true                 // 디버깅용 sourcemap 생성
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
